@page "{handler?}"
@model IndexModel
@{
    ViewData["Title"] = "CCT";
}

<!DOCTYPE html>
<html lang="de">
    <head>
    <meta charset="utf-8" />
    </head>
    <body>
        <form method="post">

            <div>
                <div>
                    <label class="control-label">Datum: </label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="alert-danger"></span>
                </div>
                <div>
                    <label class="control-label">Uhrzeit von: </label>
                    <input asp-for="From" class="form-control" />
                    <span asp-validation-for="From" class="alert-danger"></span>
                </div>
                <div>
                    <label class="control-label">Uhrzeit bis: </label>
                    <input asp-for="To" class="form-control" />
                    <span asp-validation-for="To" class="alert-danger"></span>
                </div>

            </div>
            <br />
            <div>
                <input asp-page-handler="Filter" type="submit" value="Filter anwenden" class="btn btn-default" />
            </div>
            <div>
                <input asp-page-handler="Delete" type="submit" value="Filter löschen" class="btn btn-default" />
            </div>

            <table class="table">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().RecordTime)
                        </th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model.PeopleOverview)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(_ => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => item.RecordTime.DateTime)
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </form>
    </body>
</html>

    




