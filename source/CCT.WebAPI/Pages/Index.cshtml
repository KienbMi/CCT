@page
@model IndexModel
@{
    ViewData["Title"] = "CCT";
}

<form method="post">

    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PeopleOverview.FirstOrDefault().RecordTime)
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model.PeopleOverview)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_ => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.RecordTime)
                    </td>
                </tr>
            }

        </tbody>

    </table>
</form>




