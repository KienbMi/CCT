@page
@model CCT.WebAPI.Pages.WriteTagPageModel
@{
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
</head>
<body>
    <h1>NFC-Tag beschreiben</h1>

    <form method="post">
        <div class="form-group">
            <label class="control-label">Vorname</label>
            <input autocomplete="off" asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Nachname</label>
            <input autocomplete="off" asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Telefonnummer</label>
            <input autocomplete="off" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Geimpft: </label>
            @Html.CheckBoxFor(model => model.IsVaccinated)
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="submit" value="Tag beschreiben" class="btn btn-default" />

            <input asp-page-handler="Reset" type="submit" value="Löschen" class="btn btn-secondary" />
        </div>
        <div class="form-group">
            <input asp-page-handler="Write" type="submit" value="NFC-Reader auf schreiben umstellen" class="btn btn-default" />

            <input asp-page-handler="Read" type="submit" value="NFC-Reader auf lesen umstellen" class="btn btn-default" />
        </div>


    </form>
</body>
</html>